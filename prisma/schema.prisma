// learn more about it in the docs: https://pris.ly/d/prisma-schema

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Usuario {
  id          Int     @id @default(autoincrement())
  nome        String
  sobrenome   String
  email       String  @unique
  senha       String
  cpf         String  @unique

  perfis      Perfil[]
  
  
  
}

model Perfil {
  id          Int @id @default(autoincrement())
  titulo      String
  imagem      String

  usuario     Usuario @relation(fields: [usuarioId], references: [id])
  usuarioId   Int

  jogos       PerfisOnJogos[]

  
}

model Jogo {
  id              Int @id @default(autoincrement())
  titulo          String
  capa            String
  descricao       String
  ano             Int
  nota            Int
  trailer         String
  gameplay        String

  generos         JogosOnGeneros[]

  perfis          PerfisOnJogos[]
  

}

model Genero {
  id   Int @id @default(autoincrement())
  nome String

  jogos        JogosOnGeneros[] 

  
}

model JogosOnGeneros {
  jogos       Jogo      @relation(fields: [jogoId], references: [id])
  jogoId      Int
  generos     Genero    @relation(fields: [generoId], references: [id])
  generoId    Int

  @@id([jogoId, generoId])
}

model PerfisOnJogos {p
  perfis      Perfil    @relation(fields: [perfilId], references: [id])
  perfilId    Int
  jogos       Jogo      @relation(fields: [jogoId], references: [id])
  jogoId      Int

  @@id([perfilId, jogoId])
}